---
import Bot from '../Icons/Bot.astro'
import Exit from '../Icons/Exit.astro'
import MenuHamburguesa from '../Icons/MenuHamb.astro'

interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props

const navLinks = [
  { href: '/nosotros', label: 'Nosotros' },
  { href: '/funciones', label: 'Funciones' },
  { href: '/planes', label: 'Planes' },
  { href: '/demo', label: 'Demo', highlight: true }
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="header">

  <!-- Glassmorphism Background -->
  <div class="absolute inset-0 bg-zinc-950/80 backdrop-blur-md border-b border-zinc-800/50 opacity-0 transition-opacity duration-300" id="header-bg"></div>

  <div class="relative max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-16 md:h-20">

      <!-- Logo -->
      <a href="/" class="group flex items-center gap-2.5 relative z-10">
        <div class="relative">
          <Bot width="36" height="36" color="white"/>
          <div class="absolute inset-0 bg-blue-500/20 rounded-full blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <span class="text-white text-xl md:text-2xl font-bold tracking-tight">
          Audit<span class="bg-gradient-to-r from-blue-500 to-teal-400 text-transparent bg-clip-text">Ai</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'relative px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200',
              currentPath === link.href
                ? 'text-white bg-zinc-800/50'
                : 'text-slate-400 hover:text-white hover:bg-zinc-800/30',
              link.highlight && 'text-teal-400 hover:text-teal-300'
            ]}
          >
            {link.label}
            {link.highlight && (
              <span class="absolute -top-1 -right-1 w-2 h-2 bg-teal-400 rounded-full animate-pulse"></span>
            )}
          </a>
        ))}
      </div>

      <!-- Desktop CTA Buttons -->
      <div class="hidden md:flex items-center gap-3">
        <a href="/contacto"
           class="group relative inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-teal-500 hover:from-blue-500 hover:to-teal-400 text-white text-sm font-semibold px-5 py-2.5 rounded-xl transition-all duration-300 shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 hover:scale-105">
          <span>Contacto</span>
          <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="hamburger"
        class="md:hidden relative z-10 w-10 h-10 flex items-center justify-center rounded-lg bg-zinc-800/50 hover:bg-zinc-800 transition-colors"
        aria-label="Abrir menú"
      >
        <MenuHamburguesa width="24" height="24"/>
      </button>

    </nav>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-overlay"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm z-40 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"
  ></div>

  <!-- Mobile Menu Panel -->
  <div
    id="mobile-menu"
    class="fixed top-0 right-0 h-full w-[280px] bg-zinc-900 border-l border-zinc-800 z-50 translate-x-full transition-transform duration-300 ease-out md:hidden"
  >

    <!-- Mobile Menu Header -->
    <div class="flex items-center justify-between p-4 border-b border-zinc-800">
      <a href="/" class="flex items-center gap-2">
        <Bot width="28" height="28" color="white"/>
        <span class="text-white text-lg font-bold">
          Audit<span class="bg-gradient-to-r from-blue-500 to-teal-400 text-transparent bg-clip-text">Ai</span>
        </span>
      </a>
      <button
        id="hamburger-close"
        class="w-10 h-10 flex items-center justify-center rounded-lg bg-zinc-800 hover:bg-zinc-700 transition-colors"
        aria-label="Cerrar menú"
      >
        <Exit width="20" height="20"/>
      </button>
    </div>

    <!-- Mobile Menu Links -->
    <div class="p-4">
      <ul class="space-y-1">
        {navLinks.map(link => (
          <li>
            <a
              href={link.href}
              class:list={[
                'flex items-center justify-between px-4 py-3 rounded-xl text-base font-medium transition-all duration-200',
                currentPath === link.href
                  ? 'text-white bg-zinc-800'
                  : 'text-slate-400 hover:text-white hover:bg-zinc-800/50',
                link.highlight && 'text-teal-400'
              ]}
            >
              <span>{link.label}</span>
              {link.highlight && (
                <span class="px-2 py-0.5 bg-teal-500/10 border border-teal-500/30 rounded-full text-xs text-teal-400">Nuevo</span>
              )}
              <svg class="w-4 h-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Divider -->
      <div class="my-6 border-t border-zinc-800"></div>

      <!-- Mobile Menu CTAs -->
      <div class="space-y-3">
        <a href="/contacto"
           class="flex items-center justify-center gap-2 w-full px-4 py-3 bg-gradient-to-r from-blue-600 to-teal-500 text-white font-semibold rounded-xl shadow-lg shadow-blue-500/20">
          <span>Contacto</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Footer -->
      <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-zinc-800">
        <a href="https://t.me/ClariTaxBot" target="_blank"
           class="flex items-center gap-3 px-4 py-3 bg-zinc-800/50 rounded-xl hover:bg-zinc-800 transition-colors">
          <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="text-white text-sm font-medium block">Probar en Telegram</span>
            <span class="text-slate-500 text-xs">3 análisis gratis</span>
          </div>
          <svg class="w-4 h-4 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>

    </div>
  </div>

</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16 md:h-20"></div>

<script>
const headerBg = document.getElementById('header-bg') as HTMLElement
const hamburger = document.getElementById('hamburger') as HTMLButtonElement
const hamburgerClose = document.getElementById('hamburger-close') as HTMLButtonElement
const mobileMenu = document.getElementById('mobile-menu') as HTMLElement
const mobileOverlay = document.getElementById('mobile-overlay') as HTMLElement

// State management
let isMenuOpen = false
let ticking = false

// Mobile menu functions
const openMenu = () => {
  mobileMenu.classList.remove('translate-x-full')
  mobileOverlay.classList.remove('opacity-0', 'pointer-events-none')
  document.body.style.overflow = 'hidden'
  isMenuOpen = true
}

const closeMenu = () => {
  mobileMenu.classList.add('translate-x-full')
  mobileOverlay.classList.add('opacity-0', 'pointer-events-none')
  document.body.style.overflow = ''
  isMenuOpen = false
}

// Event listeners
hamburger.addEventListener('click', openMenu)
hamburgerClose.addEventListener('click', closeMenu)
mobileOverlay.addEventListener('click', closeMenu)

// Close menu on escape key
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape' && isMenuOpen) {
    closeMenu()
  }
})

// Header scroll effect
const updateHeader = () => {
  const scrollY = window.scrollY

  // Show/hide background based on scroll
  if (scrollY > 50) {
    headerBg.classList.remove('opacity-0')
    headerBg.classList.add('opacity-100')
  } else {
    headerBg.classList.add('opacity-0')
    headerBg.classList.remove('opacity-100')
  }

  ticking = false
}

const handleScroll = () => {
  // Update header background
  if (!ticking) {
    requestAnimationFrame(updateHeader)
    ticking = true
  }

  // Close mobile menu on scroll (only if menu is open and on mobile)
  if (window.innerWidth < 768 && isMenuOpen) {
    closeMenu()
  }
}

window.addEventListener('scroll', handleScroll)

// Close mobile menu on resize to desktop
window.addEventListener('resize', () => {
  if (window.innerWidth >= 768 && isMenuOpen) {
    closeMenu()
  }
})
</script>
