---
import Layout from '../layouts/Layout.astro'
import Check from '../Icons/Check.astro';
---

<Layout title="Contacto | AuditAi" fill1="#224466" fill2="#224466">
  <main class="text-white min-h-screen">

    <!-- Background Effects -->
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-1/4 -left-32 w-96 h-96 bg-blue-600/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 px-4 md:px-6 lg:px-40 py-12 md:py-20">

      <!-- Two Column Layout -->
      <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start">

        <!-- Left Column - Info -->
        <div class="lg:sticky lg:top-20">

          <!-- Badge -->
          <div class="inline-flex items-center gap-2 bg-zinc-900/80 border border-zinc-800 rounded-full px-4 py-2 mb-6">
            <span class="w-2 h-2 bg-teal-400 rounded-full animate-pulse"></span>
            <span class="text-slate-400 text-sm font-medium">Respondemos en menos de 24hs</span>
          </div>

          <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight">
            Hablemos de tu <span class="bg-gradient-to-r from-blue-500 to-teal-400 text-transparent bg-clip-text">contabilidad inteligente</span>
          </h1>

          <p class="text-slate-400 mt-6 text-lg leading-relaxed">
            Completá el formulario y un especialista de AuditAi te responderá a la brevedad.
            Estamos listos para ayudarte a automatizar tareas y optimizar tu tiempo.
          </p>

          <!-- Contact Methods -->
          <div class="mt-10 space-y-4">

            <a href="https://t.me/Ginoogg" target="_blank"
               class="group flex items-center gap-4 p-4 bg-zinc-900/50 border border-zinc-800 rounded-xl hover:border-blue-500/50 hover:bg-zinc-900/80 transition-all duration-300">
              <div class="w-12 h-12 rounded-xl bg-blue-500/10 border border-blue-500/20 flex items-center justify-center group-hover:bg-blue-500/20 transition-colors">
                <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                </svg>
              </div>
              <div class="flex-1">
                <span class="text-white font-semibold block">Telegram</span>
                <span class="text-slate-500 text-sm">Respuesta inmediata</span>
              </div>
              <svg class="w-5 h-5 text-slate-600 group-hover:text-blue-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>

            <a href="mailto:ginociancia10@gmail.com"
               class="group flex items-center gap-4 p-4 bg-zinc-900/50 border border-zinc-800 rounded-xl hover:border-teal-500/50 hover:bg-zinc-900/80 transition-all duration-300">
              <div class="w-12 h-12 rounded-xl bg-teal-500/10 border border-teal-500/20 flex items-center justify-center group-hover:bg-teal-500/20 transition-colors">
                <svg class="w-6 h-6 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1">
                <span class="text-white font-semibold block">Email</span>
                <span class="text-slate-500 text-sm">ginociancia10@gmail.com</span>
              </div>
              <svg class="w-5 h-5 text-slate-600 group-hover:text-teal-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>

          </div>

          <!-- Trust Indicators -->
          <div class="mt-10 pt-8 border-t border-zinc-800">
            <p class="text-slate-500 text-sm mb-4">Más de 50 contadores confían en nosotros</p>
            <div class="flex items-center gap-6">
              <div class="flex -space-x-2">
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 border-2 border-zinc-900 flex items-center justify-center text-white text-xs font-bold">M</div>
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-teal-400 to-teal-600 border-2 border-zinc-900 flex items-center justify-center text-white text-xs font-bold">C</div>
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 border-2 border-zinc-900 flex items-center justify-center text-white text-xs font-bold">L</div>
              </div>
              <div class="flex items-center gap-1">
                {[1, 2, 3, 4, 5].map(() => (
                  <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
                <span class="text-slate-400 text-sm ml-2">4.9/5</span>
              </div>
            </div>
          </div>

        </div>

        <!-- Right Column - Form -->
        <div>
          <form class="bg-zinc-900/70 backdrop-blur-sm p-8 rounded-2xl border border-zinc-800 shadow-2xl" id="contact-form">

            <!-- Success Message -->
            <div id="mensaje-enviado"
                 class="mb-0 h-0 overflow-hidden opacity-0 bg-green-500/10 border border-green-500/30 rounded-xl flex items-center justify-center gap-3 text-green-400 font-semibold transition-all duration-300">
              <Check color="#4ade80"/>
              <span>¡Mensaje enviado con éxito!</span>
            </div>

            <!-- Form Header -->
            <div class="mb-8">
              <h2 class="text-2xl font-bold text-white">Envianos tu consulta</h2>
              <p class="text-slate-500 text-sm mt-2">Los campos con <span class="text-red-400">*</span> son obligatorios</p>
            </div>

            <!-- Name Field -->
            <div class="mb-6">
              <label for="nombre" class="block text-slate-300 text-sm font-medium mb-2">
                Nombre completo <span class="text-red-400">*</span>
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <input id="nombre" type="text" required
                  class="w-full pl-12 pr-4 py-3.5 rounded-xl bg-zinc-800/50 text-white placeholder-slate-600 border border-zinc-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500/50 transition-all"
                  placeholder="Ej: María López" />
              </div>
            </div>

            <!-- Email Field -->
            <div class="mb-6">
              <label for="email" class="block text-slate-300 text-sm font-medium mb-2">
                Correo electrónico <span class="text-red-400">*</span>
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <input id="email" type="email" required
                  class="w-full pl-12 pr-4 py-3.5 rounded-xl bg-zinc-800/50 text-white placeholder-slate-600 border border-zinc-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500/50 transition-all"
                  placeholder="ejemplo@correo.com" />
              </div>
            </div>

            <!-- Subject Field (New) -->
            <div class="mb-6">
              <label for="asunto" class="block text-slate-300 text-sm font-medium mb-2">
                Asunto
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                </div>
                <select id="asunto"
                  class="w-full pl-12 pr-4 py-3.5 rounded-xl bg-zinc-800/50 text-white border border-zinc-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500/50 transition-all appearance-none cursor-pointer">
                  <option value="" class="bg-zinc-900">Seleccioná un asunto</option>
                  <option value="consulta" class="bg-zinc-900">Consulta general</option>
                  <option value="demo" class="bg-zinc-900">Solicitar demo</option>
                  <option value="pricing" class="bg-zinc-900">Información de precios</option>
                  <option value="soporte" class="bg-zinc-900">Soporte técnico</option>
                  <option value="partnership" class="bg-zinc-900">Alianzas / Partnership</option>
                </select>
                <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Message Field -->
            <div class="mb-8">
              <label for="mensaje" class="block text-slate-300 text-sm font-medium mb-2">
                Mensaje <span class="text-red-400">*</span>
              </label>
              <div class="relative">
                <textarea id="mensaje" rows="5" required
                  class="w-full px-4 py-3.5 rounded-xl bg-zinc-800/50 text-white placeholder-slate-600 border border-zinc-700 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500/50 transition-all resize-none"
                  placeholder="Contanos qué necesitás o cómo podemos ayudarte..."></textarea>
                <div class="absolute bottom-3 right-3 text-slate-600 text-xs">
                  <span id="char-count">0</span>/500
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" id="submit-button"
              class="group w-full bg-gradient-to-r from-blue-600 to-teal-500 hover:from-blue-500 hover:to-teal-400 text-white font-semibold text-lg py-4 rounded-xl transition-all duration-300 flex items-center justify-center gap-3 shadow-lg shadow-blue-500/20 hover:shadow-blue-500/40 disabled:opacity-50 disabled:cursor-not-allowed">
              <span id="button-text">Enviar mensaje</span>
              <svg id="button-arrow" class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
              <!-- Loading Spinner (hidden by default) -->
              <svg id="button-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>

            <!-- Privacy Note -->
            <p class="text-slate-600 text-xs text-center mt-4">
              Al enviar, aceptás nuestra <a href="/politicas" class="text-slate-500 hover:text-blue-400 underline">política de privacidad</a>
            </p>

          </form>
        </div>

      </div>
    </div>

  </main>
</Layout>

<script>
import { config } from './config.ts'

type FormData = {
  nombre: string
  email: string
  asunto: string
  mensaje: string
}

const postLeadsUrl = config.postLeads
const form = document.getElementById('contact-form') as HTMLFormElement
const nombre = document.getElementById('nombre') as HTMLInputElement
const email = document.getElementById('email') as HTMLInputElement
const asunto = document.getElementById('asunto') as HTMLSelectElement
const mensaje = document.getElementById('mensaje') as HTMLTextAreaElement
const submitButton = document.getElementById('submit-button') as HTMLButtonElement
const buttonText = document.getElementById('button-text') as HTMLSpanElement
const buttonArrow = document.getElementById('button-arrow') as HTMLElement
const buttonSpinner = document.getElementById('button-spinner') as HTMLElement
const mensajeEnviado = document.getElementById('mensaje-enviado') as HTMLDivElement
const charCount = document.getElementById('char-count') as HTMLSpanElement

// Character counter
mensaje.addEventListener('input', () => {
  const count = mensaje.value.length
  charCount.textContent = count.toString()
  if (count > 500) {
    charCount.classList.add('text-red-400')
  } else {
    charCount.classList.remove('text-red-400')
  }
})

const setLoading = (loading: boolean) => {
  submitButton.disabled = loading
  if (loading) {
    buttonText.textContent = 'Enviando...'
    buttonArrow.classList.add('hidden')
    buttonSpinner.classList.remove('hidden')
  } else {
    buttonText.textContent = 'Enviar mensaje'
    buttonArrow.classList.remove('hidden')
    buttonSpinner.classList.add('hidden')
  }
}

const showSuccess = () => {
  mensajeEnviado.classList.remove('h-0', 'mb-0', 'opacity-0', 'overflow-hidden')
  mensajeEnviado.classList.add('h-auto', 'p-4', 'mb-6', 'opacity-100')

  setTimeout(() => {
    mensajeEnviado.classList.add('h-0', 'mb-0', 'opacity-0', 'overflow-hidden')
    mensajeEnviado.classList.remove('h-auto', 'p-4', 'mb-6', 'opacity-100')
  }, 5000)
}

const sendMessage = async (data: FormData) => {
  setLoading(true)

  try {
    const response = await fetch(postLeadsUrl, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(data)
    })

    if (response.ok) {
      form.reset()
      charCount.textContent = '0'
      showSuccess()
    }

    return response.ok
  } catch (error) {
    console.error('Error al enviar el formulario:', error)
    return false
  } finally {
    setLoading(false)
  }
}

form.addEventListener('submit', async (e) => {
  e.preventDefault()

  const formData: FormData = {
    nombre: nombre.value,
    email: email.value,
    asunto: asunto.value,
    mensaje: mensaje.value
  }

  await sendMessage(formData)
})
</script>
